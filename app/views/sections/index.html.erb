<%- model_class = Section -%>
<div class="page-header">
  <h1>Seções</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:Codigo) %></th>
      <th><%= model_class.human_attribute_name(:secao) %></th>
      <th><%= model_class.human_attribute_name(:Empresa) %></th>
    </tr>
  </thead>
  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.id %></td>
        <td><%= link_to section.secao, section_path(section) %></td>
        <td><%= section.firm.nome_fantasia %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_section_path,
            :class => 'btn btn-success' %>
