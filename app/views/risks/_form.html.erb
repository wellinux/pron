<%= simple_form_for @risk, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :risk_category %>
  <%= f.input :nome_risco %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                risks_path, :class => 'btn' %>
  </div>
<% end %>
