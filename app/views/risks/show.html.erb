<%- model_class = Risk -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:risk_category_id) %>:</strong></dt>
  <dd><%= @risk.risk_category_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nome_risco) %>:</strong></dt>
  <dd><%= @risk.nome_risco %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              risks_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_risk_path(@risk), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              risk_path(@risk),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
