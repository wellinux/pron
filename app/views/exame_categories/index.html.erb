<%- model_class = ExameCategory -%>
<div class="page-header">
  <h1>Categorias de Exame</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @exame_categories.each do |exame_category| %>
      <tr>
        <td><%= link_to exame_category.nome, exame_category_path(exame_category) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_exame_category_path(exame_category), :class => 'btn btn-mini' %>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_exame_category_path,
            :class => 'btn btn-primary' %>
