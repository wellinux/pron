    </div>
  </div>
  <div class="control-group">
    <%= f.label :risco, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :risco, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :endereco, :class => 'control-label' %>
    <div class="controls">
