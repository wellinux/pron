    </div>
  </div>
  <div class="control-group">
    <%= f.label :nome_fantasia, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nome_fantasia, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :frente_trabalho, :class => 'control-label' %>
