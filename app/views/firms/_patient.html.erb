      
<%= simple_form_for ([@firm, @firm.patients.build]), { :class => 'form-horizontal' } do |f| %>
 <%= f.association :firm, label_method: :nome_fantasia, value_method: :id, include_blank: false, readonly: true %>
 <%= f.input :matricula %>
 <%= f.input :nome %>
 <%= f.input :data_nascimento, as: :date, start_year: Date.today.year - 90,
                               end_year: Date.today.year - 16 %>
 <%= f.input :nome_mae %>
 <%= f.input :sexo, :collection => (["Masculino", "Feminino"]), :as => :radio %>
 <%= f.input :documento %>
 <%= f.input :tipo_documento, collection: (["CPF", "RG", "CTPS", "CNH", "PENDENTE"]), as: :radio_buttons %>
 <%= f.input :section, collection: @firm.sections.all, value_method: :secao, label_method: :secao %>
 <%= f.input :function, collection: @firm.functions.all, value_method: :funcao, label_method: :funcao %>

 <%= f.submit nil, :class => 'btn btn-primary' %>
<% end %>