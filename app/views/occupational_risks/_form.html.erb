<%= simple_form_for @occupational_risk, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :risk_category_id %>
  <%= f.input :nome_risco %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                occupational_risks_path, :class => 'btn' %>
  </div>
<% end %>
