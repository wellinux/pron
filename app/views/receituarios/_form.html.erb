<%= simple_form_for @receituario, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :appointment_id, collection: Appointment.all, label_method: :data, value_method: :id %>
  <%= f.input :prescricao, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'tiny'} } %>
  <%= f.input :local, :input_html => { :value => 'Penedo/AL' } %>

    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                appointment_receituario_path(@receituario), :class => 'btn' %>

<% end %>
