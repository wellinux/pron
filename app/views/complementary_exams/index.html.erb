<%- model_class = ComplementaryExam -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:appointment_id) %></th>
      <th><%= model_class.human_attribute_name(:data) %></th>
      <th><%= model_class.human_attribute_name(:descricao_resultado) %></th>
      <th><%= model_class.human_attribute_name(:exame) %></th>
      <th><%= model_class.human_attribute_name(:imagem_file_name) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @complementary_exams.each do |complementary_exam| %>
      <tr>
        <td><%= link_to complementary_exam.id, complementary_exam_path(complementary_exam) %></td>
        <td><%= complementary_exam.appointment_id %></td>
        <td><%= complementary_exam.data %></td>
        <td><%= complementary_exam.descricao_resultado %></td>
        <td><%= complementary_exam.exame %></td>
        <td><%= complementary_exam.imagem_file_name %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_complementary_exam_path(complementary_exam), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      complementary_exam_path(complementary_exam),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_complementary_exam_path,
            :class => 'btn btn-primary' %>
