<%= simple_form_for ([@appointment, @appointment.declarations.build]), :html => { :class => 'form-horizontal' } do |d| %>
	 <%= d.hidden_field :appointment_id, :html_input => { :value => @appointment } %>
	 <%= d.input :dia, as: :string, :input_html => { :value => l(Date.today) } %>  
	 <%= d.input :hora_inicio %>
	 <%= d.input :hora_termino %>
	 <%= d.input :anotacoes, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'tiny'} } %>
	 <%= d.input :local, :input_html => { :value => "Penedo/AL" } %>
	 <%= d.button :submit, :class => 'btn btn-primary btn-small' %>
 <% end %>