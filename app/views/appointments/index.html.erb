<%- model_class = Appointment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:data) %></th>
      <th><%= model_class.human_attribute_name(:firm) %></th>
      <th><%= model_class.human_attribute_name(:patient) %></th>
      <th><%= model_class.human_attribute_name(:ordem_exame) %></th>
      <th><%= model_class.human_attribute_name(:peso) %></th>
      <th><%= model_class.human_attribute_name(:altura) %></th>
      <th><%= model_class.human_attribute_name(:imc) %></th>
      <th><%= model_class.human_attribute_name(:pa) %></th>
      <th><%= model_class.human_attribute_name(:pulso) %></th>
      <th><%= model_class.human_attribute_name(:conclusao) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>

      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= link_to appointment.data, appointment_path(appointment) %></td>
        <td><%= appointment.record.patient.firm.nome_fantasia %></td>
        <td><%= appointment.record.patient.nome %></td>
        <td><%= appointment.ordem_exame %></td>
        <td><%= appointment.peso %></td>
        <td><%= appointment.altura %></td>
        <td><%= appointment.imc %></td>
        <td><%= appointment.pa %></td>
        <td><%= appointment.pulso %></td>
        <td><%= appointment.conclusao %></td>
        <td><%= appointment.status %></td>

        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_appointment_path(appointment), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      appointment_path(appointment),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_appointment_path,
            :class => 'btn btn-primary' %>
