<%- model_class = Aso -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:data) %></th>
      <th><%= model_class.human_attribute_name(:appointment) %></th>
      <th><%= model_class.human_attribute_name(:periodicidade) %></th>
      <th><%= model_class.human_attribute_name(:grau_exposição) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @asos.each do |aso| %>
      <tr>
        <td><%= link_to l(aso.data), aso_path(aso) %></td>
        <td><%= aso.appointment_id %></td>
        <td><%= aso.periodicidade %></td>
        <td><%= aso.grau_exposicao %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_aso_path(aso), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      aso_path(aso),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_aso_path,
            :class => 'btn btn-primary' %>
