
	<% if controller_name != 'sessions' %>
	  <%= link_to "Entrar", new_session_path(resource_name), :class => 'btn btn-small btn-info' %>
	<% end %>

	<% if devise_mapping.registerable? && controller_name != 'registrations' %>
	  <%= link_to "Registrar", new_registration_path(resource_name), :class => 'btn btn-small btn-warning' %>
	<% end %>

	<% if devise_mapping.recoverable? && controller_name != 'passwords' %>
	  <%= link_to "Esqueceu a Senha?", new_password_path(resource_name), :class => 'btn btn-small btn-warning' %>
	<% end %>

	<% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
	  <%= link_to "Não recebeu o email de confirmação?", new_confirmation_path(resource_name), :class => 'btn btn-small btn-warning' %>
	<% end %>

	<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
	  <%= link_to "Não recebeu as instruções de desbloqueio?", new_unlock_path(resource_name), :class => 'btn btn-small btn-warning' %>
	<% end %>

	<% if devise_mapping.omniauthable? %>
	  <% resource_class.omniauth_providers.each do |provider| %>
	    <%= link_to "Logado como #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), :class => 'btn btn-small btn-warning' %>
	  <% end %>
	<% end %>
